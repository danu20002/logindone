<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2C7CC"
    android:orientation="vertical"
    android:layout_gravity="center"

    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" LOGIN "
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#050505"
        android:layout_gravity="center"

        android:layout_marginTop="150dp"/>
    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/email_login"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="email"
        app:hintTextColor="#101010"
        android:textSize="15sp"

            android:textStyle="bold"
            android:textColor="#0B0A0A"
            android:background="@drawable/background_btn"
            android:drawableEnd="@drawable/baseline_perm_contact_calendar_24"
            android:ems="14"
            android:inputType="textEmailAddress">


</EditText>

    <!--    password-->
    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/password_login"
        android:layout_gravity="center"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="password"
        app:hintTextColor="#101010"
        app:passwordToggleTint="@color/cardview_dark_background"
        app:passwordToggleEnabled="true"

        android:textSize="15sp"


            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#0B0A0A"
            android:drawableEnd="@drawable/baseline_lock_24"
            android:background="@drawable/background_btn"
            android:inputType="textPassword">



</EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="260dp"
        android:text="Forgot password?"
        android:textStyle="bold"
        android:id="@+id/forgotpassword"
        android:layout_marginTop="10dp"
        android:textColor="@color/design_default_color_on_secondary"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/signinbtn"
        android:background="@drawable/background_btn"
        android:text="Sign In"
        android:textStyle="bold"
        android:textSize="15sp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="don't have account? "
            android:layout_marginStart="100dp"
            android:textStyle="bold"
            android:textColor="#090909"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="click here"
            android:textColor="#00B0FF"
            android:textStyle="bold"
            android:id="@+id/clickhere"
            android:layout_marginTop="30dp"
            />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:outlineAmbientShadowColor="@color/design_default_color_on_secondary"/>


</LinearLayout>